generator client {
  provider = "prisma-client-js"
  // Using default output location
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  avatar    String
  createdAt DateTime @default(now())
  posts     Post[]
}

model Post {
  id       Int    @id @default(autoincrement())
  userName String // FK referencing User.name
  user     User   @relation(fields: [userName], references: [name])

  mint      String
  boughtAmt Float
  holding   Boolean
  soldAmt   Float
  createdAt DateTime @default(now())
}
